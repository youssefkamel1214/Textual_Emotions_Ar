<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".uplaodcomplaint.AddComplaintFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/logo"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/subject"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp">

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/complaint_subject"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/custom_edittext"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/title"></EditText>

                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/governorate"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"></TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/cairo"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/custom_edittext"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/governorate"></EditText>

                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/gov_organization"
                    android:textSize="@dimen/_19sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/ex_ministry_of_health"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/custom_edittext"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/Organization"></EditText>

                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/optional"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/custom_edittext"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="20dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:id="@+id/address"></EditText>

                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@android:color/darker_gray" />


                <TextView
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/your_complain"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"></TextView>

                <EditText
                    android:id="@+id/complaint_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/custom_edittext"
                    android:minHeight="@dimen/_200sdp"
                    android:gravity="top|right"
                    android:textSize="20dp"
                    android:digits="@string/allowed_charaters_in_complaint"
                    android:padding="8dp"
                    android:hint="@string/max_words_is_600"
                    android:maxLength="3600" />

                <View
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/attachments"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:text="@string/add_attachment"
                    android:id="@+id/attachment"
                    android:padding="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/attachmentpath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:visibility="gone"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:textAlignment="center"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_120sdp"
                    android:text="@string/submit"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:id="@+id/submit">

                </androidx.appcompat.widget.AppCompatButton>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>

    </FrameLayout>
</layout>