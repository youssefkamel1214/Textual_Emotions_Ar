<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddComplaintFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGO"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="6dp">

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Complaint Subject"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/custom_edittext"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/title">
            </EditText>
            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Governorate"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="6dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="cairo"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/custom_edittext"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/governorate">
            </EditText>

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gov Organization"
                android:textSize="@dimen/_19sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="6dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="ex: ministry of health"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/custom_edittext"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/Organization">
            </EditText>

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="@dimen/_19sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="6dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Nasr City"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/custom_edittext"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/city">
            </EditText>

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="6dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="day/month/year"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/custom_edittext"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/date">
            </EditText>

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="6dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="(optional)"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/custom_edittext"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/address">
            </EditText>

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="your complain"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="6dp">
            </TextView>

            <EditText
            android:id="@+id/complaint_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:inputType="textMultiLine"
            android:background="@drawable/custom_edittext"
            android:minHeight="@dimen/_50sdp"
            android:textSize="20dp"
            android:hint="Max words is 600"
            android:paddingLeft="@dimen/_10sdp"
            android:maxLines="10"
            android:maxLength="3600"
            />

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="6dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="(optional)"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/custom_edittext"
                android:maxLines="1"
                android:inputType="text"
                android:textSize="20dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/comments">
            </EditText>

            <View
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="8dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attachments"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="15dp">
            </TextView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:text="Add attachment"
                android:id="@+id/attachment"
                android:padding="@dimen/_10sdp">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:textAlignment="center"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_120sdp"
                android:text="submit"
                android:layout_marginBottom="@dimen/_15sdp"
                android:id="@+id/submit">

            </androidx.appcompat.widget.AppCompatButton>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</FrameLayout>