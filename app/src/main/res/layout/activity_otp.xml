<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundc"
        android:orientation="vertical"
        android:gravity="center"

        tools:context=".authintication.OtpActivity">
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="30dp"
           app:cardCornerRadius="30dp"
           android:layout_gravity="center"
           app:cardElevation="20dp"
           android:background="@drawable/custom_edittext">
           <androidx.appcompat.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_gravity="center_horizontal"
               android:padding="24dp">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/code_was_sent"
                   android:id="@+id/SignupText"
                   android:textSize="30sp"
                   android:textAlignment="center"
                   android:textStyle="bold"
                   android:textColor="@color/bluefateh"/>
               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:id="@+id/email"
                   android:background="@drawable/custom_edittext"
                   contentPaddingLeft="16dp"
                   android:hint="@string/code"
                   android:padding="8dp"
                   android:inputType="number"
                   android:textColor="@color/black"
                   android:textColorHighlight="@color/cardview_dark_background"
                   android:layout_marginTop="20dp"/>
               <androidx.appcompat.widget.AppCompatButton
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:id="@+id/otpbutton"
                   android:text="Verify Code"
                   android:textStyle="bold"
                   android:textSize="18sp"
                   android:layout_marginTop="30dp"
                   android:background="@drawable/button_background"
                   app:cornerRadius = "100dp"/>
               <ProgressBar
                   android:id="@+id/progressBar"
                   style="?android:attr/progressBarStyle"
                   android:visibility="gone"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:indeterminateTint="@color/bluefateh"
                   android:layout_gravity="center"
                   android:background="@null"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/appCompatButton" />
           </androidx.appcompat.widget.LinearLayoutCompat>
       </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>